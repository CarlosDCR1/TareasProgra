Algoritmo perimetro_area
	Definir ra Como Real;
	// Calcula el perimetro y el area de una circulo dando el radio
	Escribir 'Ingrese el radio del circulo: ';
	Leer ra;
	area <- pi*(ra*ra);
	peri <- 2*(pi)*ra;
	Escribir 'El Area del circulo es: ', area;
	Escribir 'El Perimetro del circulo es: ', peri;
FinAlgoritmo
